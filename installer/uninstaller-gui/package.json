{
  "name": "inferno-console-uninstaller",
  "version": "1.4.117",
  "description": "Inferno Console Uninstaller",
  "author": "Alessandro(NeverAgain)",
  "main": "main-uninstaller.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/Alexand83/InfernoConsole.git"
  },
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "build": "electron-builder --win --config uninstaller-builder.json"
  },
  "devDependencies": {
    "electron": "^28.0.0"
  },
  "build": {
    "appId": "com.infernoconsole.uninstaller",
    "productName": "Inferno Console Uninstaller",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main-uninstaller.js",
      "index.html",
      "style.css",
      "script.js"
    ],
    "win": {
      "target": "portable",
      "icon": "assets/icon.ico"
    },
    "portable": {
      "artifactName": "Inferno-Console-Uninstaller.exe"
    }
  }
}
